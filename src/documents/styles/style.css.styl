@import 'nib'

background-size()
  -webkit-background-size arguments
  -moz-background-size arguments
  -o-background-size arguments
  background-size arguments

a, a:link
  cursor pointer

body
html
  height 100%

table
  tfoot, tbody
    th
      border-top 1px solid #DDD

.frame
  width 100%
  height 100%
  position relative
  margin 0

.inner
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  height 100%
  width 100%
  max-height 900px
