.message
  color white
  position absolute
  bottom 300px
  left 0
  right 0

.message-text
  margin 0 auto
  max-width 700px

h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6
  font-family "Alegreya", Helvetica, Arial, sans-serif;
  font-weight 500
  line-height 1.1

.greeting
  position absolute
  top 20%
  left 0
  right 0
  font-family "Alegreya", Helvetica, Arial, sans-serif;
  font-size 25px

.photo-credits
  font-size 10px

.signature
  font-family "Dancing Script", Helvetica, Arial, sans-serif;

.next
  position absolute
  bottom 0
  left 0
  right 0
  text-align center

#bg
  position absolute
  top -50%
  left -50%
  width 150%
  height 150%

#bg img
  position absolute
  top: 0
  left 0
  right 0
  bottom 0
  margin auto
  min-width 50%
  min-height 50%
